<div id=<%=@id%>>
  <%= f = form_for @changeset, "#",
    id: "message-form",
    phx_target: @myself,
    phx_change: :validate,
    phx_submit: :save %>

    <%= label f, :message_body %>
    <%= textarea f, :message_body %>
    <%= error_tag f, :message_body %>

    <%= submit "Save", phx_disable_with: "Sending..." %>
  </form>
</div>
